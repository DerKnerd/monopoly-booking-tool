<Window x:Class="Monopoly_Booking_Tool.NewPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neuer Spieler" Height="85" Width="240" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27" />
            <RowDefinition Height="27" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox Margin="2" Name="name" Grid.Column="1" />
        <Label Content="Name: " />
        <Button Grid.Row="1" Content="Hinzufügen" Margin="2" Click="button1_Click" />
        <Button Grid.Column="1" Grid.Row="1" Content="Abbrechen" Margin="2" Click="cancel_Click" />
    </Grid>
</Window>
